#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve() {
    int n;
    cin >> n;
    vector<int> p(n);
    for(int i = 0; i < n; i++) cin >> p[i];

    bool found = false;
    for(int i = 1; i < n - 1; i++) {
        if(p[i] > p[i - 1] && p[i] > p[i + 1]) {
            cout << "YES" << endl;
            cout << i << " " << i + 1 << " " << i + 2 << endl;
            found = true;
            break;
        }
    }
    if(!found) cout << "NO" << endl;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while(t--) solve();

    return 0;
}
