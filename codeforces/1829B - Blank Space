#include <bits/stdc++.h>
using namespace std;
 
void solve()
{
    int n;
    cin >> n;
 
    vector<int> v(n);
    for(int i = 0; i < n; i++) cin >> v[i];
 
    int current = 0;
    int max_len = 0;
 
    for(int i = 0; i < n; i++){
        if(v[i] == 0){
            current++;
            max_len = max(max_len, current);
        }
        else{
            current = 0;
        }
    }
 
    cout << max_len << endl;
}
 
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);
    
    int t;
    cin >> t;
    
    while(t--){
        
        solve();
    }
 
    return 0;
}
