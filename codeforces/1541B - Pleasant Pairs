#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
 
void solve(){ 
   ll n; cin >> n;
   vector<ll> a(n+1);
   for(int i=1; i<=n; i++){
    cin >> a[i];
   }
   int c = 0;
   for(ll i=1; i<=n; i++){
    for(ll j=a[i] - i; j<=n; j+= a[i]){
        if(i < j && a[i] * a[j] == i + j){  
            c++;
        }
    }
   }
 
 
   cout << c << endl;
}
 
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);
    int t;
    cin >> t;
    while(t--){
        solve();
    }
    return 0;
}
