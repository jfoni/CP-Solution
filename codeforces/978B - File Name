#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve()
{
    int n;
    cin >> n;

    string s;
    cin >> s;

    int countx = 0;
    int countremove = 0;

    for(int i = 0; i < n; i++)
    {
        if(s[i] =='x')
        {
            countx++;
            if(countx > 2) countremove++;
        }

        else
        {
            countx = 0;
        }
    }

    cout << countremove <<endl;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    solve();

    return 0;
}

