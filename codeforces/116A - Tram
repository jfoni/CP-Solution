#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
    int n;
    cin >> n;

    int passenger = 0;
    int capacity = 0;

    for(int i = 0 ; i < n ; i++)
    {

        int a, b;
        cin >> a >> b;

            passenger -= a;
            passenger += b;

        int Final = passenger;

        if(Final > capacity)
        {
            capacity = Final;
        }
    }

    cout << capacity <<endl;


}
