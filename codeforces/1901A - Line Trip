#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

void slove()
{
    int n, x;
    cin >> n >> x;

    vector<int>a(n);
    for(int i = 0; i< n; i++)
    {
        cin >> a[i];
    }

    int ans = a[0];

    for(int i = 1; i < n; i++)
    {
        ans = max(ans, a[i] - a[i - 1]);
    }

    ans = max(ans, 2 * (x - a[n - 1]));

    cout << ans << endl;
}


int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    int t;
    cin >> t;

    while(t--)
        slove();
    return 0;
}
