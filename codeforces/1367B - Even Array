#include <bits/stdc++.h>
using namespace std;

void solve() {
    int n;
    cin >> n;
    vector<int> a(n);

    for(int i = 0; i < n; i++)
        cin >> a[i];

    int c0 = 0; 
    int c1 = 0; 

    for(int i = 0; i < n; i++) {
        if(i % 2 != a[i] % 2) { 
            if(i % 2 == 0)
                c0++;
            else
                c1++;
        }
    }

    if(c0 == c1)
        cout << c0 << endl;
    else
        cout << -1 << endl;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while(t--)
        solve();

    return 0;
}

