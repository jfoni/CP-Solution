#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
    int y;
    cin >> y;

    for(int year=y+1;year<=9999;year++){
        string s=to_string(year);

        set<char>c;

        for(int i=0;i<s.size();i++){
            c.insert(s[i]);
        }

            if(c.size()==4){
                cout << year <<endl;
                break;
        }
    }
}
