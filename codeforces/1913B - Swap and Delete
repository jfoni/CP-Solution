#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve(){
    string s; cin >> s;
    int c0(0), c1(0);
    for(int i=0; i<s.size(); i++){
        if(s[i]=='1') c0++;
        else c1++;
    }
    if(c0 == c1){
        cout << 0 << endl;
        return;
    }
    else{
        int i=0;
        while(i <= s.size() && c0>=0 && c1>=0){
            if(s[i] == '1') c1--;
            else c0--;

            i++;
        }
    }

    cout << max(c1, c0) << endl;
}



int main(){
    ios :: sync_with_stdio(false);
    cin.tie(0);
    int t; cin >> t;
    while(t--){
        solve();
    }

    return 0;

}
