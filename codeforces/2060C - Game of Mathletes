#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve() {
    int n, k;
    cin >> n >> k;
    vector<int> a(n);

    for(int i = 0; i < n; i++) cin >> a[i];

    sort(a.begin(), a.end());
    int l = 0, r = n - 1;
    int ans = 0;

    while(l < r) {
        int sum = a[l] + a[r];

        if(sum == k) {
            ans++;
            l++;
            r--;
        }
        else if(sum < k) {
            l++;
        }
        else {
            r--;
        }
    }

    cout << ans << endl;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    int t;
    cin >> t;

    while(t--)
        solve();
    return 0;
}
