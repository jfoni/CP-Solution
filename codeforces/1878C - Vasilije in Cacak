#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
    int t;
    cin >> t;

    while(t--)
    {
        ll n, k, x;
        cin >> n >> k >> x;

        ll min_sum = (k * (k + 1))/2;
        ll max_sum = (k * (2 * n - k + 1))/2;

        if(min_sum <= x && x <= max_sum) cout << "YES" <<endl;

        else cout << "NO" <<endl;
    }
}
