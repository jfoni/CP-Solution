#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
    int t;
    cin >> t;

    while(t--)
    {
        int n;
        cin >> n;

        int arr[n];

        for(int i = 0; i < n; i++)
        {
            cin >> arr[i];
        }

        int mn = arr[0];
        for(int i = 0; i < n; i++)
        {
            mn = min(mn, arr[i]);
        }

        ll total = 0;
        for(int i = 0; i < n; i++)
        {
            total += (arr[i] - mn);
        }

        cout << total <<endl;

    }
}
