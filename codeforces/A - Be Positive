#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
 
 
void solve(){
    int n; cin >> n;
    vector<int> a(n);
    int p(0), o(0);
    for(int i=0; i<n; i++){
        cin >> a[i];
        if(a[i] == 0) p++;
        else if(a[i] -1) o++;
    }
    int ans = 0;
 
    if(o & 1){
        ans += 2;
        ans += p;
    }
    else ans += p;
 
    cout << ans << endl;
 
}   
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);
    int t;
    cin >> t;
    while(t--){
        solve();
    }
    return 0;
}
