#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
 
void slove() {
    int n;
    cin >> n;
 
    if(n < 3) {
        cout << 0 <<endl;
    }
    else {
        if(n % 2 == 0) {
            cout << (n / 2 - 1) <<endl;
        }
        else {
            cout << (n / 2) <<endl;
        }
    }
}
 
int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);
 
    int t;
    cin >> t;
    while(t--) {
        slove();
    }
    return 0;
}
