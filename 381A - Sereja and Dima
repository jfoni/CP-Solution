#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

void slove()
{
    int n;
    cin >> n;

    vector<int>cs(n);

    for(int i = 0; i < n; i++) cin >> cs[i];

    int left = 0,  right = n - 1;
    int s = 0, d = 0;
    bool s_turn = true;

    while(left <= right)
    {
        if(cs[left] > cs[right])
        {
            if(s_turn) s += cs[left];
            else d += cs[left];
            left++;
        }

        else
        {
            if(s_turn) s += cs[right];
            else d += cs[right];
            right--;
        }

        s_turn = !s_turn;
    }

    cout << s << " " << d <<endl;
}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    cout.tie(nullptr);

    slove();

    return 0;
}
