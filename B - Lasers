#include<bits/stdc++.h>
using namespace std;
typedef long long ll;

int main()
{
    int t;
    cin >> t;

    while(t--)
    {
        int n, m;

        ll x, y;

        cin >> n >> m >> x >> y;

        int a[n], b[m];

        for(int i = 0; i < n; i++) cin >> a[i];
        for(int i = 0; i < m; i++) cin >> b[i];

        int h = 0;
        int v = 0;

        for(int i = 0; i < n; i++)
        {
            if(a[i] < y)
            {
                h++;
            }
        }

        for(int i = 0; i < m; i++)
        {
            if(b[i] < x)
            {
                v++;
            }
        }

        int sum = h + v;

        cout << sum <<endl;
    }
}
